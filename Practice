    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const MAX_FRIENDS = 3;
            let friendsCount = 0;
            const form = document.getElementById('registrationForm');
            const friendsContainer = document.getElementById('friendsContainer');
            const addFriendBtn = document.getElementById('addFriendBtn');
            const friendsLeftSpan = document.getElementById('friendsLeft');
            const nextBtn = document.getElementById('nextBtn');
            
            function updateFriendsCounter() {
                const left = MAX_FRIENDS - friendsCount;
                friendsLeftSpan.textContent = left;
                addFriendBtn.disabled = left <= 0;
                
                nextBtn.disabled = !form.checkValidity();
            }
            
            function addFriendSection() {
                if (friendsCount >= MAX_FRIENDS) return;
                
                friendsCount++;
                const friendId = friend-${friendsCount};
                
                const friendSection = document.createElement('div');
                friendSection.className = 'friend-section';
                friendSection.id = friendId;
                friendSection.innerHTML = `
                    <div class="friend-title">Друг #${friendsCount}</div>

<button type="button" class="remove-friend" data-friend="${friendId}">Удалить</button>
                    <div class="form-group">
                        <label for="${friendId}-name" class="required">ФИО</label>
                        <input type="text" id="${friendId}-name" placeholder="Введите ФИО друга" required>
                    </div>
                    <div class="form-group">
                        <label for="${friendId}-email" class="required">Имейл</label>
                        <input type="email" id="${friendId}-email" placeholder="Введите имейл друга" required>
                    </div>
                    <div class="form-group">
                        <label for="${friendId}-phone" class="required">Номер телефона</label>
                        <input type="tel" id="${friendId}-phone" placeholder="+7 777 77 77" required>
                    </div>
                `;
                
                friendsContainer.appendChild(friendSection);
                updateFriendsCounter();
                
                friendSection.querySelector('.remove-friend').addEventListener('click', function() {
                    friendsContainer.removeChild(document.getElementById(this.dataset.friend));
                    friendsCount--;
                    updateFriendsCounter();
                });
                
                const inputs = friendSection.querySelectorAll('input');
                inputs.forEach(input => {
                    input.addEventListener('input', updateFriendsCounter);
                });
            }
            
            addFriendBtn.addEventListener('click', addFriendSection);
            
            document.getElementById('backBtn').addEventListener('click', () => {
                window.history.back();
            });
            
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                if (form.checkValidity()) {
                    alert('Форма успешно отправлена!');
                    // Здесь можно добавить отправку данных на сервер
                }
            });
            
            const mainInputs = form.querySelectorAll('input, select');
            mainInputs.forEach(input => {
                input.addEventListener('input', updateFriendsCounter);
                input.addEventListener('change', updateFriendsCounter);
            });
            

            updateFriendsCounter();
        });
    </script>
</body>
