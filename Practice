<div class="registration-card">
        <h1>Заявка на регистрацию для мероприятия</h1>
        
        <form id="registrationForm">
            <div class="form-group">
                <label for="event-type" class="required">Тип мероприятия</label>
                <select id="event-type" required>
                    <option value="" disabled selected>Выберите вид мероприятия</option>
                    <option value="conference">Конференция</option>
                    <option value="seminar">Семинар</option>
                    <option value="workshop">Мастер-класс</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="full-name" class="required">ФИО</label>
                <input type="text" id="full-name" placeholder="Введите ФИО" required>
            </div>
            
            <div class="form-group">
                <label for="email" class="required">Имейл</label>
                <input type="email" id="email" placeholder="Введите имейл" required>
            </div>
            
            <div class="form-group">
                <label for="phone" class="required">Номер телефона</label>
                <input type="tel" id="phone" placeholder="+7 777 77 77" required>
            </div>
            
            <hr class="divider">
            
            <div id="friendsContainer"></div>
            
            <button type="button" class="add-friend-btn" id="addFriendBtn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 6V12M12 12V18M12 12H18M12 12H6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
                Добавить друга (осталось <span id="friendsLeft">3</span>)
            </button>
            
            <div class="form-group">
                <label for="communication" class="required">Предпочитаемый вид связи</label>
                <select id="communication" required>
                    <option value="" disabled selected>Выберите предпочитаемый вид связи</option>
                    <option value="phone">Телефон</option>
                    <option value="email">Email</option>
                    <option value="whatsapp">WhatsApp</option>
                </select>
            </div>
            
            <div class="action-buttons">
                <button type="button" class="btn btn-secondary" id="backBtn">Назад</button>
                <button type="submit" class="btn btn-primary" id="nextBtn">Дальше</button>
            </div>
        </form>
